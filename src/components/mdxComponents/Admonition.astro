---
const { type = 'note', title, open = true, children } = Astro.props;

const colors = {
  note: 'bg-blue-50 border-blue-400 text-blue-800 dark:text-black',
  abstract: 'bg-gray-50 border-gray-400 text-gray-800',
  info: 'bg-sky-50 border-sky-400 text-sky-800',
  tip: 'bg-green-50 border-green-400 text-green-800',
  success: 'bg-emerald-50 border-emerald-400 text-emerald-800',
  question: 'bg-indigo-50 border-indigo-400 text-indigo-800',
  warning: 'bg-yellow-50 border-yellow-400 text-yellow-800',
  failure: 'bg-rose-50 border-rose-400 text-rose-800',
  danger: 'bg-red-50 border-red-400 text-red-800',
  bug: 'bg-orange-50 border-orange-400 text-orange-800',
  example: 'bg-purple-50 border-purple-400 text-purple-800',
  quote: 'bg-slate-50 border-slate-400 text-slate-800',
};

const style = colors[type] || colors.note;
---

<details class={`mt-4 border-l-4 p-4 rounded-md ${style}`} open={open}>
  <summary class="font-semibold cursor-pointer">
    {title || type.charAt(0).toUpperCase() + type.slice(1)}
  </summary>
  <div class="mt-2 prose dark:prose-invert dark:text-black">
    <slot />
  </div>
</details>

