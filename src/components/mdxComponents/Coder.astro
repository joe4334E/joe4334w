---
// src/components/EditorInteractivo.astro
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'iframe'> {
  height?: string;
  defaultCode?: string;
}

const { height = '500px', defaultCode = '', ...attrs } = Astro.props;
---

<iframe
  src={`https://onecompiler.com/embed/html?hideLanguageSelection=true&hideNew=true&code=${encodeURIComponent(defaultCode)}`}
  width="100%"
  height={height}
  frameBorder="0"
  title="Editor HTML interactivo"
  style={{ border: '1px solid #ccc', borderRadius: '8px' }}
  {...attrs}
/>
